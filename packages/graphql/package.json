{
  "name": "@mono/graphql",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "module": "./dist/graphql.js",
      "types": "./dist/graphql.d.ts"
    }
  },
  "main": "./dist/graphql.js",
  "types": "./dist/graphql.d.ts",
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "codegen": "graphql-codegen --config ./codegen.ts",
    "codegen:watch": "graphql-codegen --require dotenv/config --config ./codegen.ts --watch",
    "download-schema": "rover graph fetch vandiessen-mono-graph@current > ./src/generated/schema.graphql && npm run lint:styles",
    "lint": "npm run lint:js && npm run lint:styles && npm run lint:typescript",
    "lint:js": "eslint . --fix",
    "lint:styles": "prettier . --write  --list-different",
    "lint:typescript": "tsc",
    "test": "jest"
  },
  "dependencies": {
    "@mono/utils": "1.0.0",
    "@urql/core": "5.0.8",
    "@urql/exchange-graphcache": "7.2.1",
    "@urql/exchange-retry": "1.3.0",
    "graphql": "16.9.0",
    "react": "18.3.1"
  },
  "devDependencies": {
    "@apollo/rover": "0.26.3",
    "@commitlint/config-conventional": "19.6.0",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/client-preset": "4.4.0",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-document-nodes": "4.0.12",
    "@graphql-codegen/typescript-operations": "4.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.14.0",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "eslint-config-next": "15.1.2",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-testing-library": "6.4.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "prettier": "3.3.3",
    "pretty-quick": "4.0.0",
    "turbo": "2.2.3",
    "typescript": "5.7.2"
  }
}
