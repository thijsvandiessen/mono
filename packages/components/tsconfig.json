{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@mono/typescript-config/base.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "composite": false,
    "incremental": false
  },
  "include": ["src/**/*", "src/*", "global.d.ts"],
  "exclude": ["node_modules", "src/**/*.scss"]
}
