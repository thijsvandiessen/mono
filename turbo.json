{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "app/**/.next/**",
        "app/**/!.next/cache/**",
        "packages/**/dist/**"
      ],
      "dependsOn": ["^build"]
    },
    "analyze": {
      "outputs": [
        "app/**/.next/**",
        "app/**/!.next/cache/**",
        "packages/**/coverage/**"
      ]
    },
    "codegen": {
      "outputs": ["packages/graphql/src/generated/**"]
    },
    "lint": {
      "dependsOn": []
    },
    "test": {
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "remoteCache": {
    "signature": false
  },
  "globalDependencies": [".env", "tsconfig.json"],
  "envMode": "strict"
}
