{
  "name": "mono-vandiessen",
  "version": "1.0.4",
  "private": true,
  "description": "Monorepo for small websites",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "codegen": "npm run download-schema --workspace=packages/graphql && npm run codegen --workspace=packages/graphql",
    "dev": "concurrently \"npm run dev --workspace=packages/graphql\" \"npm run dev --workspace=packages/hooks\" \"npm run dev --workspace=packages/utils\" \"npm run dev --workspace=apps/lundi-bleu\"",
    "lint": "npm run lint --workspaces",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "test": "npm test --workspaces --if-present"
  },
  "lint-staged": {
    "*.{js,cjs,ts,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "next": "14.2.15",
    "react": "18.3.1",
    "react-datocms": "7.0.3",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@apollo/rover": "0.26.2",
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/client-preset": "4.4.0",
    "@graphql-codegen/introspection": "4.0.3",
    "@graphql-codegen/typescript": "4.1.0",
    "@graphql-codegen/typescript-operations": "4.3.0",
    "@swc/core": "1.7.36",
    "@swc/jest": "0.2.36",
    "@testing-library/jest-dom": "6.6.2",
    "@testing-library/react": "16.0.1",
    "@types/jest": "29.5.13",
    "@types/node": "22.7.6",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "8.10.0",
    "@typescript-eslint/parser": "8.9.0",
    "concurrently": "9.0.1",
    "dotenv": "16.4.5",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.15",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-testing-library": "6.3.2",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "pretty-quick": "4.0.0",
    "sass": "1.79.5",
    "turbo": "2.1.3",
    "typescript": "5.6.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.24.0"
  },
  "packageManager": "npm@10.7.0"
}
