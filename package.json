{
  "name": "mono-vandiessen",
  "version": "1.0.11",
  "private": true,
  "description": "Monorepo for small websites",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "e2e"
  ],
  "scripts": {
    "build": "tsc --build && pnpm run -r build",
    "codegen": "pnpm -r download-schema && pnpm -r codegen",
    "dev": "concurrently \"tsc --build --watch\" \"pnpm run --filter lundi-bleu dev\" \"pnpm run --filter example dev\"",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test",
    "e2e": "pnpm run -r e2e"
  },
  "devDependencies": {
    "@apollo/rover": "0.33.0",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@swc/core": "1.12.4",
    "@types/node": "22.15.30",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "concurrently": "9.2.0",
    "dotenv": "16.5.0",
    "eslint": "9.30.1",
    "prettier": "3.5.3",
    "sass": "1.89.2",
    "ts-node": "10.9.2",
    "turbo": "2.5.4",
    "typescript": "5.8.3",
    "vitest": "3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.44.2"
  },
  "packageManager": "pnpm@10.12.1"
}
