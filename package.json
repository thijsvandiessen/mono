{
  "name": "mono-vandiessen",
  "version": "1.0.10",
  "private": true,
  "description": "Monorepo for small websites",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "tsc --build --verbose && npm run build --workspaces --if-present",
    "codegen": "npm run download-schema --workspace=packages/data && npm run codegen --workspace=packages/data",
    "dev": "concurrently \"npm run dev --workspace=apps/lundi-bleu\" \"npm run dev --workspace=apps/example\"",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm test --workspaces --if-present"
  },
  "devDependencies": {
    "@apollo/rover": "0.29.1",
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@swc/core": "1.11.24",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/node": "22.15.17",
    "@types/react": "19.1.3",
    "@types/react-dom": "19.1.4",
    "concurrently": "9.1.2",
    "dotenv": "16.5.0",
    "eslint": "9.26.0",
    "prettier": "3.5.3",
    "sass": "1.88.0",
    "ts-node": "10.9.2",
    "turbo": "2.5.3",
    "typescript": "5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.40.2"
  },
  "packageManager": "npm@11.2.0"
}
