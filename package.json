{
  "name": "mono-vandiessen",
  "version": "1.0.14",
  "private": true,
  "description": "Monorepo for small websites",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "e2e"
  ],
  "scripts": {
    "build": "tsc --build && pnpm run -r build",
    "codegen": "pnpm -r download-schema && pnpm -r codegen",
    "dev": "concurrently \"tsc --build --watch\" \"pnpm run --filter lundi-bleu dev\" \"pnpm run --filter example dev\"",
    "e2e": "pnpm run -r e2e",
    "lint": "pnpm run -r lint",
    "test": "pnpm run -r test"
  },
  "devDependencies": {
    "@apollo/rover": "0.36.2",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@swc/core": "1.13.21",
    "@types/node": "24.9.1",
    "concurrently": "9.2.1",
    "dotenv": "17.2.3",
    "eslint": "9.38.0",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "turbo": "2.5.8",
    "typescript": "5.9.3",
    "vitest": "4.0.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.52.5"
  },
  "packageManager": "pnpm@10.18.0"
}
