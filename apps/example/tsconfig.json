{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@mono/typescript-config/base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
